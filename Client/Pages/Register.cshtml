@page
@model Client.Pages.RegisterModel
@{
}
<h1>Zarejestruj się!</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Login" class="control-label">Login:</label>
                <input asp-for="Login" class="form-control" type ="text"/>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Hasło</label>
                <input asp-for="Password" class="form-control" type="password"/>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Docelowa Rola:</label>
                <input asp-for="RoleName" class="form-control" type="text" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Zarejestruj!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>